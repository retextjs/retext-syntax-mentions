{
  "name": "retext-syntax-mentions",
  "version": "1.1.5",
  "description": "Classify @mentions as syntax",
  "license": "MIT",
  "keywords": [
    "syntax",
    "source",
    "mentions",
    "retext"
  ],
  "repository": "retextjs/retext-syntax-mentions",
  "bugs": "https://github.com/retextjs/retext-syntax-mentions/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "nlcst-to-string": "^2.0.0",
    "unist-util-position": "^3.0.0",
    "unist-util-visit": "^1.1.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^13.0.0",
    "prettier": "^1.14.3",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "retext": "^5.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.4.3",
    "unist-builder": "^1.0.2",
    "unist-util-remove-position": "^1.1.0",
    "xo": "^0.23.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s retextSyntaxMentions > retext-syntax-mentions.js",
    "build-mangle": "browserify . -s retextSyntaxMentions -p tinyify > retext-syntax-mentions.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "ignores": [
      "retext-syntax-mentions.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
